<Window x:Class="EjemploVentanas.VentanaHija"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EjemploVentanas"
        mc:Ignorable="d"
        Title="VentanaHija" Height="450" Width="800" ShowInTaskbar="False" ResizeMode="CanResizeWithGrip">
    <StackPanel>
        <TextBlock Text="{Binding Path=Mensaje}"></TextBlock>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="AceptarButton" IsDefault="True" Click="AceptarButton_Click">Aceptar</Button>
            <Button IsCancel="True">Cancelar</Button>
        </StackPanel>
    </StackPanel>
</Window>
